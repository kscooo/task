ARG NODE_VERSION=hydrogen

FROM node:${NODE_VERSION}

ARG GANACHE_VERSION=7.9.1
ARG PRIV_KEY=0xe5127005b33e35e669aec6f463adc2c1eac00710bdfc299e0c0f46f786c5197a
ARG ANOTHER_PRIV_KEY=0x73fbad0ba67e2e45f92956a834f7c5dcb95f3450cc07bd52aa78e50b24954635
ARG INIT_WEI=10000000000000000000000
ARG ACCOUNTS=0xBF5e18bCdA7e9189B92EF17a5dd7E7e4767dBc36
ARG ANOTHER_ACCOUNTS=0x23AC5dEDa8a5C6D9b4721b05E7882bE718E5C07d

ENV GANACHE_VERSION=$GANACHE_VERSION
ENV PRIV_KEY=$PRIV_KEY
ENV INIT_WEI=$INIT_WEI
ENV ANOTHER_PRIV_KEY=$ANOTHER_PRIV_KEY

RUN npm --registry https://registry.npm.taobao.org install -g ganache@$GANACHE_VERSION

CMD ganache --server.host="0.0.0.0" --wallet.accounts=$PRIV_KEY,$INIT_WEI --wallet.accounts=$ANOTHER_PRIV_KEY,$INIT_WEI
